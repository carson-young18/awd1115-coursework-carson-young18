@model UserViewModel
@{
	ViewBag.Title = "User Management";
}

<h2>Manage Users</h2>

<a asp-area="Identity" asp-page="/Account/Register">Add User</a>

<table class="table-bordered table-striped table-sm">
	<thead>
		<tr>
			<th>Username</th>
			<th>Roles</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@if (Model.Users.Count() == 0)
		{
			<tr>
				<td colspan="5">No users found.</td>
			</tr>
		}
		else
		{
			@foreach (ApplicationUser user in Model.Users)
			{
				<tr>
					<td>@user.UserName</td>
					<td>
						@foreach (string role in user.Roles)
						{
							<div>@role</div>
						}
					</td>
					<td>
						<form method="post" asp-action="Delete" asp-route-id="@user.Id">
							<button type="submit" class="btn btn-danger">Delete User</button>
						</form>
					</td>
					<td>
						@if (!user.Roles.Contains("Admin"))
						{
							<form method="post" asp-action="AddAdmin" asp-route-id="@user.Id">
								<button type="submit" class="btn btn-primary">Give Admin</button>
							</form>
						}
					</td>
					<td>
						<form method="post" asp-action="RemoveAdmin" asp-route-id="@user.Id">
							<button type="submit" class="btn btn-danger">Remove Admin</button>
						</form>
					</td>
				</tr>
			}
		}

	</tbody>
</table>

<h2>Manage Roles</h2>

@if (Model.Roles.Count() == 0)
{
	<form method="post" asp-action="CreateAdmin">
		<button type="submit" class="btn btn-primary">Create Admin Role</button>
	</form>
}
else
{
	<table class="table table-bordered table-striped table-sm">
		<thead>
			<tr>
				<th>Role</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var role in Model.Roles)
			{
				<tr>
					<td>@role.Name</td>
					<td>
						<form method="post" asp-action="DeleteRole" asp-route-id="@role.Id">
							<button type="submit" class="btn btn-danger">Delete Role</button>
						</form>
					</td>
				</tr>
			}
		</tbody>
	</table>
}