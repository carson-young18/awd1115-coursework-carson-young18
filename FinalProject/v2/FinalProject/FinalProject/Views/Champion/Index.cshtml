@model ChampionViewModel
@{
    ViewBag.Title = "Champions";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-dismissible fade show my-3 tempMsg" role="alert">
        @TempData["message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Champions</h1>

    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create Champion
    </a>
</div>

<div class="table-responsive">
    <table class="table table-dark table-hover align-middle">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Champion.Name)</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Champion champ in Model.Champions)
            {
                <tr>
                    <td class="fw-semibold">
                        @champ.Name
                    </td>
                    <td class="text-end">
                        <a asp-action="Details"
                           asp-route-id="@champ.ChampionId"
                           class="btn btn-sm btn-outline-info me-1">
                            Details
                        </a>

                        <a asp-action="Edit"
                           asp-route-id="@champ.ChampionId"
                           class="btn btn-sm btn-outline-warning me-1">
                            Edit
                        </a>

                        <a asp-action="Delete"
                           asp-route-id="@champ.ChampionId"
                           class="btn btn-sm btn-outline-danger">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>