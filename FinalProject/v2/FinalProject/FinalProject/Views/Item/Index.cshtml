@model IEnumerable<Item>
@{
	ViewBag.Title = "Items";
}

<h1>Items</h1>
<a asp-action="Create">Create New Item</a>


<table class="table">
	<thead>
		<th>@Html.DisplayNameFor(model => model.Name)</th>
		<th>@Html.DisplayNameFor(model => model.Cost)</th>
		<th></th>
	</thead>
	<tbody>
		@foreach (Item item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Cost)
				</td>
				<td>
					<a asp-action="Details" asp-route-id="@item.ItemId">Details</a>
					<a asp-action="Edit" asp-route-id="@item.ItemId">Edit</a>
					<a asp-action="Delete" asp-route-id="@item.ItemId">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>