@model ItemViewModel
@{
	ViewBag.Title = "Items";
}

@if (Model.Message != null)
{
	<div class="alert alert-dismissible fade show my-3 tempMsg" role="alert">
		@Model.Message
		<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
	</div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
	<h1 class="mb-0">Items</h1>

	<a asp-action="Create" class="btn btn-primary">
		<i class="bi bi-plus-circle"></i> Create Item
	</a>
</div>

<div class="table-responsive">
	<table class="table table-dark table-hover align-middle">
		<thead>
			<tr>
				<th>@Html.DisplayNameFor(model => model.Item.Name)</th>
				<th>@Html.DisplayNameFor(model => model.Item.Cost)</th>
				<th class="text-end">Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (Item item in Model.Items)
			{
				<tr>
					<td class="fw-semibold">
						@item.Name
					</td>
					<td>
						@item.Cost g
					</td>
					<td class="text-end">
						<a asp-action="Details"
						   asp-route-id="@item.ItemId"
						   class="btn btn-sm btn-outline-info me-1">
							Details
						</a>

						<a asp-action="Edit"
						   asp-route-id="@item.ItemId"
						   class="btn btn-sm btn-outline-warning me-1">
							Edit
						</a>

						<a asp-action="Delete"
						   asp-route-id="@item.ItemId"
						   class="btn btn-sm btn-outline-danger">
							Delete
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>