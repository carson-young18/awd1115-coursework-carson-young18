@model IEnumerable<GenericStore.Models.Product>
@{
    ViewData["Title"] = "Products (Admin)";
}

<h2>Products (Admin)</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<a asp-area="Admin" asp-controller="Products" asp-action="Create" class="btn btn-success">Add Product</a>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Brand</td>
                <td>@p.Category?.Name</td>
                <td>@p.Price.ToString("C")</td>
                <td>
                    <a href="/admin/products/edit/@p.ProductId/@p.Slug/" class="btn btn-sm btn-primary me-1">Edit</a>
                    <a href="/admin/products/delete/@p.ProductId/@p.Slug/" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>