@model GenericStore.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<h2 class="mb-4 text-danger">Delete Product</h2>

<div class="alert alert-warning">
    <h4 class="alert-heading">Are you sure you want to delete this product?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text"><strong>Brand:</strong> @Model.Brand</p>
        <p class="card-text"><strong>Category:</strong> @Model.Category?.Name</p>
        <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("C")</p>

        @if (!string.IsNullOrEmpty(Model.ImageFileName))
        {
            <img src="~/images/@Model.ImageFileName" alt="@Model.Name" class="img-thumbnail mt-2" style="max-width:200px;" />
        }
    </div>
</div>

<form asp-action="Delete" asp-route-id="@Model.ProductId" asp-route-slug="@Model.Slug" method="post">
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="Slug" />

    <button type="submit" class="btn btn-danger me-2">Delete</button>
    <a asp-area="Admin" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>