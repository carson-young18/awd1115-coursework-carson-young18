@model IEnumerable<GenericStore.Models.Product>
@{
    ViewData["Title"] = "Products";
    var categories = ViewData["Categories"] as List<GenericStore.Models.Category>;
    var activeCatId = ViewData["ActiveCategoryId"] as int?;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Products</h2>
</div>

<div class="mb-3">
    <form method="get" class="d-flex gap-2 align-items-center">
        <label class="me-2">Filter:</label>
        <select name="categoryId" class="form-select w-auto" onchange="this.form.submit()">
            <option value="">All</option>
            @foreach (var c in categories)
            {
                <option value="@c.CategoryId" selected="@(activeCatId == c.CategoryId ? "selected" : null)">@c.Name</option>
            }
        </select>
    </form>
</div>

<div class="row g-3">
    @foreach (var p in Model)
    {
        <div class="col-md-4">
            <div class="card h-100">
                <img src="~/images/@p.ImageFileName" class="card-img-top" alt="@p.Name" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@p.Name</h5>
                    <p class="mb-1"><strong>@p.Brand</strong> • @p.Color</p>
                    <p class="text-muted mb-2">@p.Category?.Name</p>
                    <div class="mt-auto">
                        <p class="h5">@p.Price.ToString("C")</p>
                        <a asp-area="" asp-action="Details" asp-route-slug="@p.Slug" class="btn btn-primary w-100">View</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>