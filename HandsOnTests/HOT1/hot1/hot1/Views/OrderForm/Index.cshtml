@model OrderForm
@{
	ViewData["Title"] = "T-Shirt Order";
}

<div class="container mt-4">
    <h2>Order T-Shirts</h2>

    <form asp-action="Index" method="post">
        <div class="form-floating mb-3">
            <input asp-for="Quantity" class="form-control" placeholder="Quantity" />
            <label asp-for="Quantity"></label>
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="DiscountCode" class="form-control" placeholder="Discount code" />
            <label asp-for="DiscountCode"></label>
        </div>

        <button type="submit" class="btn btn-primary">Submit Order</button>
    </form>

	@if (Model.Quantity.HasValue && Model.Quantity > 0)
	{
		<div class="mt-4">
			@if (!string.IsNullOrEmpty(Model.DiscountError))
			{
				<p class="text-danger">@Model.DiscountError</p>
			}

			<div class="form-floating">
				<textarea class="form-control" style="height: 200px;" readonly>
@Model.Quantity T-Shirts at @Model.ShirtPrice.ToString("C") each
-------------------------
Subtotal: @Model.Subtotal.ToString("C")
Tax: @Model.Tax.ToString("C")
Total: @Model.Total.ToString("C")
                </textarea>
			</div>
		</div>
	}
</div>