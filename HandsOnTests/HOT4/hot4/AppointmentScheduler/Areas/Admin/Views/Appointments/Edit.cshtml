@model AppointmentScheduler.Models.Appointment
@{
    ViewData["Title"] = "Edit Appointment";
}

<div class="container mt-5">
    <h2 class="mb-4">Edit Appointment</h2>

    <form asp-action="Edit" asp-controller="Appointments" asp-area="Admin" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="AppointmentId" />

        <div class="mb-3">
            <label asp-for="CustomerId" class="form-label">Customer</label>
            <select asp-for="CustomerId" class="form-select" asp-items="ViewBag.CustomerList">
            </select>
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="StartDateTime" class="form-label">Start Date & Time</label>
            <input asp-for="StartDateTime" class="form-control" type="datetime-local" />
            <span asp-validation-for="StartDateTime" class="text-danger"></span>
        </div>

        <div class="d-flex mt-4">
            <button type="submit" class="btn btn-primary mx-3">Save Changes</button>
            <a asp-area="Admin" asp-controller="Appointments" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}