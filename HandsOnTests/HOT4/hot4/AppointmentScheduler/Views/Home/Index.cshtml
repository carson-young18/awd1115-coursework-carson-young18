@model IEnumerable<AppointmentScheduler.Models.Appointment>
@{
    ViewData["Title"] = "Appointments";
}

<h2 class="mb-4">All Appointments</h2>

<div class="mb-3">
    <a class="btn btn-primary me-2" asp-action="CreateCustomer">New Customer</a>
    <a class="btn btn-primary" asp-action="CreateAppointment">New Appointment</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Customer</th>
            <th>Start</th>
            <th>End</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appt in Model.OrderBy(a => a.StartDateTime))
        {
            <tr>
                <td>@appt.Customer?.Username</td>
                <td>@appt.StartDateTime.ToString("g")</td>
                <td>@appt.EndDateTime.ToString("g")</td>
                <td>@appt.Customer?.Phone</td>
            </tr>
        }
    </tbody>
</table>