@model SalesOrdersApp.Models.Product

@{
    var isEdit = Model != null && Model.ProductID != 0;
    ViewData["Title"] = isEdit ? "Edit Product" : "Add Product";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form asp-action="AddEdit" method="post" class="mt-3">
        @if (isEdit)
        {
            <input type="hidden" asp-for="ProductID" />
        }

        <div class="form-floating mb-3">
            <input asp-for="ProductName" class="form-control" placeholder="Product Name" />
            <label asp-for="ProductName">Product Name</label>
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="ProductDescShort" class="form-control" placeholder="Short Description">
            <label asp-for="ProductDescShort">Short Description</label>
            <span asp-validation-for="ProductDescShort" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="ProductDescLong" class="form-control" placeholder="Long Description">
            <label asp-for="ProductDescLong">Long Description</label>
            <span asp-validation-for="ProductDescLong" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="ProductImage" class="form-control" placeholder="Product Image" />
            <label asp-for="ProductImage">Product Image</label>
            <span asp-validation-for="ProductImage" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="ProductPrice" class="form-control" placeholder="Product Price" />
            <label asp-for="ProductPrice">Product Price</label>
            <span asp-validation-for="ProductPrice" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="ProductQty" class="form-control" placeholder="Quantity" />
            <label asp-for="ProductQty">Quantity</label>
            <span asp-validation-for="ProductQty" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryID" class="form-label">Category</label>
            <select asp-for="CategoryID" asp-items="ViewBag.Categories" class="form-select">
                <option value="0">-- Select Category --</option>
            </select>
            <span asp-validation-for="CategoryID" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="List" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}