@model Page1

@{
    ViewData["Title"] = "Add Trip";
}

<h2>Add Trip</h2>

<form method="post" asp-action="Add">
    <div class="form-group">
        <label>Destination</label>
        <select asp-for="DestinationId" asp-items="Model.Destinations" class="form-control"></select>
        <span asp-validation-for="DestinationId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Accomodation</label>
        <select asp-for="AccomodationId" asp-items="Model.Accomodations" class="form-control"></select>
        <span asp-validation-for="AccomodationId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>End Date</label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Next</button>
</form>