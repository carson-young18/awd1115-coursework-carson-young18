@model IEnumerable<Teacher>
@{
	ViewData["Title"] = "Teachers";
}

<div class="text-center">
	<h1 class="display-4">Teachers</h1>
</div>

<a asp-action="Add" class="ms-2">Add Teacher</a>

<table class="table">
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(Teacher t in Model)
		{
			<tr>
				<td>@t.FirstName</td>
				<td>@t.LastName</td>
				<td>
					<a asp-action="Delete" asp-route-id="@t.TeacherId" class="btn btn-outline-dark">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>