@model ContactManager.Models.Contact

@{
    ViewData["Title"] = "Delete Contact";
}

<div class="container mt-4">
    <h2>Delete Contact</h2>

    <div class="alert alert-warning">
        Are you sure you want to delete <strong>@Model.FirstName @Model.LastName</strong>?
    </div>

    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ContactId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Details" asp-route-id="@Model.ContactId" class="btn btn-secondary">Cancel</a>
    </form>
</div>