@model ContactManager.Models.Contact

@{
    ViewData["Title"] = "Contact Details";
}

<div class="container mt-4">
    <h2>Contact Details</h2>

    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.FirstName @Model.LastName</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.CategoryName</dd>

        <dt class="col-sm-2">Date Added</dt>
        <dd class="col-sm-10">@Model.DateAdded.ToString("g")</dd>

        <dt class="col-sm-2">Slug</dt>
        <dd class="col-sm-10">@Model.Slug</dd>
    </dl>

    <p>
        <a asp-action="Edit" asp-route-id="@Model.ContactId" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.ContactId" class="btn btn-danger">Delete</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </p>
</div>