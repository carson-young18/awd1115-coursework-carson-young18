@model TripPlannerApp.Models.ViewModels.TripDestinationViewModel

<form asp-action="AddDestination" method="post">
    <div class="mb-3">
        <label>Destination</label>
        <input asp-for="Destination" class="form-control" />
        <span asp-validation-for="Destination" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Accommadations</label>
        <input asp-for="Accommodation" class="form-control" />
        <span asp-validation-for="Accommodation" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label>End Date</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-dark">Next</button>
    <a asp-action="Cancel" class="btn btn-secondary">Cancel</a>
</form>