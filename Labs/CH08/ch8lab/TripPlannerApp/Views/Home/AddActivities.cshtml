@model TripPlannerApp.Models.ViewModels.TripActivitiesViewModel

<form asp-action="AddActivities" method="post">
    <div class="mb-3">
        <input asp-for="Activity1" class="form-control" />
    </div>
    <div class="mb-3">
        <input asp-for="Activity2" class="form-control" />
    </div>
    <div class="mb-3">
        <input asp-for="Activity3" class="form-control" />
    </div>

    <button type="submit" class="btn btn-dark">Save Trip</button>
    <a asp-action="Cancel" class="btn btn-secondary">Cancel</a>
</form>
